<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:src="@drawable/image_test_icon"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"/>

        <Button
            android:id="@+id/aboutUs_layout_button_companyWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="اسم سایت"
            android:ems="15"
            android:layout_margin="5dp"
            android:background="@drawable/button_one_list"
            android:textColor="@color/white"
            style="@style/RegularIranSans"/>

        <Button
            android:id="@+id/aboutUs_layout_button_companyPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="شماره تماس"
            android:ems="15"
            android:layout_margin="5dp"
            android:background="@drawable/button_one_list"
            android:textColor="@color/white"
            style="@style/RegularIranSans"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <Button
            android:id="@+id/aboutUs_layout_button_updateApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="بروزرسانی"
            android:ems="15"
            android:layout_margin="5dp"
            android:background="@drawable/button_one_list"
            android:textColor="@color/white"
            style="@style/RegularIranSans"/>

        <TextView
            android:id="@+id/aboutUs_layout_textView_companyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="کلیه حقوق متعلق به شرکت ... می باشد"
            android:ems="5"
            android:textColor="@color/dim_gray"
            style="@style/RegularIranSans"/>

        <TextView
            android:id="@+id/aboutUs_layout_textView_versionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="نسخه 1.0.0"
            android:ems="5"
            android:textColor="@color/dim_gray"
            style="@style/RegularIranSans"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/aboutUs_layout_textView_termOfUse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:text="شرایط استفاده"
                android:textColor="@color/blue_violet"
                style="@style/RegularIranSans"/>

            <TextView
                android:id="@+id/aboutUs_layout_textView_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="حریم خصوصی"
                android:textColor="@color/blue_violet"
                style="@style/RegularIranSans"/>

            <TextView
                android:id="@+id/aboutUs_layout_textView_frequentQuestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:text="سوالات متداول"
                android:textColor="@color/blue_violet"
                style="@style/RegularIranSans"/>

        </RelativeLayout>
    </LinearLayout>

</ScrollView>