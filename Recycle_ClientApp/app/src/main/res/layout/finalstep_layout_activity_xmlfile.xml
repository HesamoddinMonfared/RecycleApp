<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GarbageSelection.FinalStep.FinalStepActivity"
    android:orientation="vertical"
    android:background="@color/base_Background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:layout_gravity="right"
                android:text="جزییات پسماند"
                android:textColor="@color/gray"
                style="@style/RegularIranSans"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_background_xmlfile"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/finalStep_layout_textView_garbageNames"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="زباله خشک :"
                    android:textColor="@color/gray"
                    style="@style/RegularIranSans"/>

                <TextView
                    android:id="@+id/finalStep_layout_textView_garbageQuantities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="5 کیلو گرم"
                    android:textColor="@color/gray"
                    style="@style/RegularIranSans"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_gravity="right"
                android:text="جزییات زمان تحویل"
                android:textColor="@color/gray"
                style="@style/RegularIranSans"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_background_xmlfile"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/finalStep_layout_textView_selectedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="3-5-1398"
                    android:textColor="@color/gray"
                    style="@style/RegularIranSans"/>

                <TextView
                    android:id="@+id/finalStep_layout_textView_selectedDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="شنبه"
                    android:textColor="@color/gray"
                    style="@style/RegularIranSans"/>

                <TextView
                    android:id="@+id/finalStep_layout_textView_selectedHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="9 تا 11"
                    android:textColor="@color/gray"
                    style="@style/RegularIranSans"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_gravity="right"
                android:text="جزییات آدرس"
                android:textColor="@color/gray"
                style="@style/RegularIranSans"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_background_xmlfile"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/finalStep_layout_textView_selectedAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="آمل - خیابان امام رضا"
                    android:textColor="@color/gray"
                    style="@style/RegularIranSans"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_gravity="right"
                android:text="پیگیری درخواست"
                android:textColor="@color/gray"
                style="@style/RegularIranSans"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_background_xmlfile"
                android:padding="10dp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/finalStep_layout_textView_trackRequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="برای پیگیری درخواست، از منوی برنامه، بخش گزارش درخواست ها را انتخاب نمایید."
                    android:textColor="@color/gray"
                    style="@style/RegularIranSans"/>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/finalStep_layout_button_backToMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ثبت نهایی درخواست"
            android:background="@color/snapp_base"
            android:textColor="@color/white"
            style="@style/RegularIranSans"/>
        </LinearLayout>

</RelativeLayout>