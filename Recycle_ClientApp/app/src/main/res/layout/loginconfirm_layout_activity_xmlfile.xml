<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_Background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/image_test_icon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="لطفا کد دریافتی را وارد کنید"
            android:textColor="@color/dim_gray"
            style="@style/RegularIranSans"/>

        <EditText
            android:id="@+id/loginConfirm_layout_editText_confirmCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="4dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:inputType="number"
            android:textSize="18dp"
            android:maxLines="1"
            android:maxLength="11"
            android:gravity="center"
            android:minEms="12"
            android:maxEms="12"
            android:background="@drawable/edittext_background_xmlfile"
            android:textColor="@color/dim_gray"
            style="@style/RegularIranSans"/>

        <Button
            android:id="@+id/loginConfirm_layout_button_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="ثبت کد فعال سازی"
            android:ems="15"
            android:background="@drawable/button_one_list"
            android:textColor="@color/white"
            style="@style/RegularIranSans"/>

        <Button
            android:id="@+id/loginConfirm_layout_button_editPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="اصلاح شماره تماس"
            android:ems="15"
            android:background="@drawable/button_one_list"
            android:textColor="@color/white"
            style="@style/RegularIranSans"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/loginConfirm_layout_textView_counterTimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingRight="10dp"
                android:text="02:55"
                android:textColor="@color/dim_gray"/>
            <TextView
                android:id="@+id/loginConfirm_layout_textView_resendConfirmCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="درخواست ارسال مجدد کد فعال سازی"
                android:textColor="@color/dim_gray"
                style="@style/RegularIranSans"/>
        </LinearLayout>


    </LinearLayout>

</ScrollView>