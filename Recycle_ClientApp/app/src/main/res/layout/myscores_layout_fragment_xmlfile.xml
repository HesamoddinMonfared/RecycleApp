<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/myscores_layout_textView_accountBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="امتیاز شما: 0 واحد معادل 0 تومان می باشد"
        android:background="@drawable/edittext_background_xmlfile"
        android:ems="5"
        android:textColor="@color/dim_gray"
        style="@style/RegularIranSans"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.2"
            android:padding="10dp">

            <ImageView
                android:id="@+id/myscores_layout_imageView_shebaPayment"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/image_money"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="پرداخت نقدی"
                android:textColor="@color/dim_gray"
                style="@style/RegularIranSans"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.2"
            android:padding="10dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:alpha="0.2"
                android:src="@drawable/image_charge"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="خرید شارژ"
                android:textColor="@color/dim_gray"
                style="@style/RegularIranSans"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.2"
            android:padding="10dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:alpha="0.2"
                android:src="@drawable/image_shopping_cart"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="خرید از فروشگاه"
                android:textColor="@color/dim_gray"
                style="@style/RegularIranSans"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>